<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DMS</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;1,100;1,200;1,300&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    @RenderSection("styles", false)
    <style>
        body {
            padding-top: 70px;
            font-family: 'Fira Sans', sans-serif;
            font-family: 'Roboto', sans-serif;
        }

        .main {
            min-height: calc(100vh - 130px);
        }
    </style>
</head>
<body>
    <div class="navbar bg-light fixed-top navbar-expand-md shadow-sm">
        <div class="container">

            <span class="navbar-brand">DMS <sup>Demo</sup>Application</span>


            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ms-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Product items", "Index", "Products", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Orders", "Index", "Orders", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Delivery people", "Index", "DeliveryPeople", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Order Deliverires", "Index", "OrderDeliveries", new { }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container main">
        @RenderBody()


    </div>
    <footer class="container">
        <p>&copy; @DateTime.Now.Year - DMS</p>
    </footer>
    @RenderSection("scripts", false)
</body>
</html>