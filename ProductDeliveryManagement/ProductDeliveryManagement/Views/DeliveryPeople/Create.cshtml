@model ProductDeliveryManagement.Models.DeliveryPerson
@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-12">
        @using (Html.BeginForm())
        {
            <div>
                <h3>Create new order</h3>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Name, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger", style = "font-size:small" })
                </div>
                
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Phone, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger", style = "font-size:small" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Address, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
                <div class="col-4">
                    @Html.TextAreaFor(x => x.Address, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger", style = "font-size:small" })
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-4 offset-2 text-end">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        }
    </div>
</div>
@section styles
{
    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
}
@section scripts
{
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}


